{% extends 'base.html.twig' %}
{% block stylPage %}
    {{ encore_entry_link_tags('user_account') }}
{% endblock %}
{% block title %}Hello AccountUserController!{% endblock %}

{% block body %}

<div class="container">
    <h1 class="text-center">Compte d'utillisateur</h1>
    <div id="containerAccount">
        <div id="ContainerNavAccount">
            <p class="navAccount" id="profilAccount">Profil</p>
            <p class="navAccount" id="mesCommandesAccout">Mes commandes</p>
            <p class="navAccount" id="mesAdressesAcount">Mes adresses</p>
            <p class="navAccount">Déconnexion</p>
        </div>
        <div id="containerInfoAccount">
            <div class="infoAccount" id="templatProfil"></div>

            <div class="infoAccount visible" id="templatMesComandes" >
                 <div class="card-header text-center">
                    Mes adresses
                </div>
                <pre>
                    {{ dump(commande) }}
                </pre>
               
                <div class="accordion accordion-flush" id="accordionFlushExample">
                {% if commande %}
                    {% for commande in commande %}
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="flush-headingOne">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#commande{{commande.id}}" aria-expanded="false" aria-controls="flush-collapseOne">
                                    Commande référence: {{commande.reference}} 
                                </button>
                                </h2>
                                <div id="commande{{commande.id}}" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">


                                        <p>Ref: {{commande.reference}}</p>
                                        <p>Adresse de livraison: {{commande.adresse  | replace({'[spr]':'<br>','FR':'france'})| raw}}</p>
                                        <p>Prix de la commande: {{commande.subTotalTTC / 100}} € TTC</p>
                                        <P>Votre coli cera pris en charge par: {{commande.transporteurs}}</P>
                                        <p>commade passer le : {{commande.createdAt | date('d/m/y')}}</p>
                                        <p>{{commande.quantity}} articles dans votre commande</p>
                                        <a href="{{ path('commande_user',{id:commande.id})}}">Plus de détail</a>
                                    </div>
                                </div>
                            </div>
                            
                    {% endfor %}
                {% endif %}
                </div>
                
            </div>

            <div class=" infoAccount" id="templatMesAdresse">
                <div class="card-header text-center">
                    Mes adresses
                </div>
                    <div class="row">
                        <pre>
            {{ dump(app.user.adresses) }}
        </pre>
                        {% if app.user.adresses %}
                            <p>{{ app.user.adresses | length }} adresses enregistrer</p>
                            {% for adresse in app.user.adresses %}
                                    <div class="card text-center col-6" >
                                        <div class="card-body">
                                            <p>{{ adresse.fullName }}<br>
                                            {{ adresse.address }} {{ adresse.complement }}<br>
                                                {{ adresse.city }} {{ adresse.bodepostal }}<br>
                                                {{ adresse.country }}</p>
                                            <a href="{{ path('adresse_edit', {'id': adresse.id}) }}" class="btn btn-outline-secondary">Modifié</a>
                                            {{ include('adresse/_delete_form.html.twig') }}

                                        </div>
                                    </div>
                            {% endfor %}
                                            <a href="{{ path('adresse_new') }}" class="btn btn-danger">ajoute une adresse</a>

                        {% else %}
                            <p>vous n'avez pas encore d'addresse cliké <a href="{{ path('adresse_new') }}">ici</a></p>
                        {% endif %}
                    </div>
            </div>

            <div class="infoAccount"></div>
        </div>
    </div>



</div>
{% endblock %}

{% block scriptPage %}
    {{ encore_entry_script_tags('user_account') }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
{% endblock %}