{% for produit in produit %}
    <div class="col-3" >
        <a href="{{ path('produit', {slug: produit.slug}) }}">
            <img src="{{ produit.image }}" class="card-img-top" alt="...">
        </a>
        <div class="card-body">
        <div class="row">
            <h5 class="card-title col">{{produit.nom}}</h5>
            <p class="card-text col">{{produit.prix}}<span class="green">€</span></p>
        </div>
            {% for catpro in produit.categorie %}
        
                <p>{{catpro.name}}</p> 
            
            {% endfor %}
            {#                            <a href="{{path('add',{'id':produit.id})}}" class="green"><i class="fas fa-cart-arrow-down"></i>  Ajouté aux panier</a>#}
        </div>
    </div>
{% endfor %}
{% set queryParam = app.request.query.all %}
{% set queryString = queryParam|filter((v, k) => k != 'page' and k != 'ajax')|url_encode %}

<nav aria-label="Page navigation example">
    <ul class="pagination">
        {# création d'une variable "pages" qui va contenir le nombre de pages disponible #}
        {% set pages = (total / limit)|round(0, 'ceil') %}


         <li class="page-item"><a class="page-link" href="{{ (page > 1) ? "?page=" ~ (page - 1)  : "" }}&{{queryString}}">Previous</a></li>
        {% for item in 1..(pages) %} 
            <li class="page-item"><a class="page-link" href="?page={{item}}&{{queryString}}">{{item}}</a></li>
        {% endfor %}
        <li class="page-item"><a class="page-link" href="{{ (page < pages ) ? "?page=" ~ (page + 1)  : "" }}&{{queryString}}">Next</a></li>
    </ul>
</nav>

