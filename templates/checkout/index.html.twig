{% extends 'base.html.twig' %}

{% block title %}Hello CheckoutController!{% endblock %}

{% block body %}
    <div class="section">
        <div class="container">
            {{ form_start(form, {action: path('checkout_confirm')}) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="heading_s1">
                        <h4>Your delivery Address</h4>
                        <div class="content">
                            {{ form_widget(form.adresse)| replace({'[spr]':'<br>','FR':'france'})| raw }}
                        </div>
                    </div>
                    <div class="heading_s1">
                        <h4>Your carrier</h4>
                        <div class="content">

                            {{ form_widget(form.transporteur)| replace({'[spr]':'<br>'})| raw }}

                        </div>
                    </div>
                    <div class="heading_s1">
                        <h4>Additional information</h4>
                        <div class="form-group mb-0">
                            {{ form_widget(form.information) }}
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="order_review">
                        <div class="heading_s1">
                            <h4>Your Orders</h4>
                        </div>
                        <div class="table-responsive order_table">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Total</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for item in cart.produit %}
                                <tr>
                                    <td>{{ item.produit.nom }}<span class="product-qty"> x {{ item.quantity }}</span></td>
                                    <td>{{ cart.data.subTotall }}</td>
                                </tr>
                                {% endfor %}

                                </tbody>
                                <tfoot>
                               

                                <tr>
                                    <th>Total</th>
                                    <td class="product-subtotal">{{ cart.data.subTotall }}</td>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                        <div class="payment_method">
                            <div class="heading_s1">
                                <h4>Payment</h4>
                            </div>

                        </div>
                        <a href="" class="btn">

                        <button type="submit" id="checkout-button"  class="btn btn-fill-out btn-block">Place Order</button>
                        </a>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
