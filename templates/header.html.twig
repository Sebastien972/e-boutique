<header>

    <div class="grey">
        <ul class="nav justify-content-end  container">
            {% if app.user %}
                <li class="nav-item">
                    <a class="nav-link active text-white" aria-current="page" href="{{ path('account_user') }}">Héllo ! {{ app.user.firstname }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Déconextion</a>
