{% extends 'base.html.twig' %}
{% block stylePage %}
    {{ encore_entry_link_tags('home') }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.css" integrity="sha512-UTNP5BXLIptsaj5WdKFrkFov94lDx+eBvbKyoe1YAfjeRPC+gT5kyZ10kOHCfNZqEui1sxmqvodNUx3KbuYI/A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
{% endblock %}
{% block title %}accueil{% endblock %}


{% block body %}
<section>
    <div>
        <div class="container-md container-fluid">
            <div id="ctnVideo container">
                <video src="/assets/video/Rainy%20Day%20-%205278.mp4" id="video" autoplay ></video>
                <div class="containerText">
                    <h1 id="titreVideo" class="txtVideo" id='titreVideo'>MyBoutique</h1>
                    <p class="txtVideo" id="textVideo">le grand pour tous sans le covid</p>
                </div>
            </div>
        </div>
    </div>
</section>

    <section>
        <div class="container-md container-fluid">
            <h2>Nos meilleur vente</h2>
            <div class="owlNav">
                <div class="owl-prev">prev</div>
                <div class="owl-next">next</div>
            </div>
            <div class="owl-carousel meilleurVenteCarousel">
                {% for meilleurVente in meilleurVente %}


                <div class="carousel">
                    <div class='col'>
                        <a href="{{ path('produit',{slug:meilleurVente.slug}) }}">
                            <img src="{#/assets/upload/produit/#}{{ meilleurVente.image }}" class="imageProduit" alt="image du produit">
                        </a>
                    </div>
                    <div class="col">
                        <div class="infoProdui row">
                            <h3 class="col-8">{{ meilleurVente.nom }}</h3>
                            <p class="col-4 prixProduit">{{ meilleurVente.prix/100 }}<span>€</span></p>
                        </div>
                        <div>
                            <p>{{ meilleurVente.description }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

        </div>
    </section>
    <section>
        <div class="container-md container-fluid" >

            <h2>Catégorie</h2>
            <div class="owlNav">
                <div class="prev">prev</div>
                <div class="next">next</div>
            </div>
            <div class="categorieCarousel owl-carousel">
                {% for categorie in categorie %}
                    <div class="carousel">
                        <div class="card bg-dark text-white">
                            <img src="{{ categorie.image }}" class="card-img" alt="...">
                            <div class="card-img-overlay">
                                <h5 class="card-title">{{ categorie.name }}</h5>
                                <p class="card-text">{{ categorie.description }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>


        </div>
    </section>
{% endblock %}




 {% block scriptPage %}
     <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
     {{ encore_entry_script_tags('home') }}
     <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.js" integrity="sha512-gY25nC63ddE0LcLPhxUJGFxa2GoIyA5FLym4UJqHDEMHjp8RET6Zn/SHo1sltt3WuVtqfyxECP38/daUc/WVEA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
 {% endblock %}


